@model IEnumerable<T2_Gallo_Erick.Models.Distribuidor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container pt-3">

    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary"> Lista de distribuidores</h1>

        </div>
        <div class="col-6">
            <a asp-controller="Distribuidor" asp-action="Crear" class="btn btn-primary">Nuevo distribuidor</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> ID </th>
                    <th> Nombre </th>
                    <th> Razon Social </th>
                    <th> Telefono </th>
                    <th> Año de Operacion </th>
                    <th> Contacto </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="4%">@item.Id</th>
                        <th width="25%">@item.NombreDistribuidor</th>
                        <th width="20%">@item.RazonSocial</th>
						<th width="10%">@item.Telefono</th>
						<th width="20%">@item.AnioInicioOperacion.ToString("dd/MM/yyyy")</th>

                        <th width="40%">@item.Contacto</th>
                        <th>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Distribuidor" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2">Editar</a>
                                <a asp-controller="Distribuidor" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Eliminar</a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros en los distribuidores</p>
    }

</div>


